@model RotaDto

<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Role Ekle</h3>
        <a href="/Vehicle/Creating"><b>Rota</b>LTE</a>
    </div>
    <form class="form-horizontal" action="/Rota/AddRota" method="post">
        <div class="card-body">
            <div class="form-group row">

                <label for="rolename" class="col-sm-2 col-form-label">Gidiş Yönü</label>
                <div class="col-sm-10">
                    <select asp-items="(SelectList)ViewBag.cityList" asp-for="GidisId" class="from-select">
                        <option>.:: Lütfen Seçiniz ::.</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">

                <label for="rolename" class="col-sm-2 col-form-label">Donuş Yönü</label>
                <div class="col-sm-10">
                    <select asp-items="(SelectList)ViewBag.cityList" asp-for="VarisYonuId" class="from-select">
                        <option>.:: Lütfen Seçiniz ::.</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info float-right">Kaydet</button>
        </div>
    </form>
</div>
