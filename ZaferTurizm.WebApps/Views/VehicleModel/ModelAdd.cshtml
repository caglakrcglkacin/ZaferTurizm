
@model VehicleModelDto

<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Role Ekle</h3>
        <a href="/Vehicle/Creating"><b>Admin</b>LTE</a>
    </div>
    <form class="form-horizontal" action="/VehicleModel/ModelAdd" method="post">
        <div class="card-body">
            <div class="form-group row">

                <label for="rolename" class="col-sm-2 col-form-label">Model</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(p=>p.Name)
                </div>
            </div>
            <div class="form-group row">

                <label for="rolename" class="col-sm-2 col-form-label">Marka</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.VehicleMakeId, (SelectList)ViewBag.VehicleMake, "Lütfen Seçiniz", new { @class = "dropdown form-control" })
                </div>
            </div>
        </div>
        <div class="card-footer">
         
            <button type="submit" class="btn btn-info float-right">Kaydet</button>
        </div>
    </form>
</div>
